    <display-name>Controller</display-name>
    <servlet-name>Controller</servlet-name>
    <servlet-class>by.htp6.store.controller.Controller</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Controller</servlet-name>
    <url-pattern>/Controller</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>edit-user-page</servlet-name>
    <jsp-file>/pages/edituser.jsp</jsp-file>
