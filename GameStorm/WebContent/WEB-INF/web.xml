    <url-pattern>/editgame</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>search-result-page</servlet-name>
    <jsp-file>/pages/searchresult.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>search-result-page</servlet-name>
    <url-pattern>/searchresult</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>add-game-page</servlet-name>
    <jsp-file>/pages/addgame.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>add-game-page</servlet-name>
    <url-pattern>/addgame</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>error-page</servlet-name>
    <jsp-file>/pages/error.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>error-page</servlet-name>
    <url-pattern>/error</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>admin-page</servlet-name>
    <jsp-file>/pages/administration.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>admin-page</servlet-name>
    <url-pattern>/administration</url-pattern>
  </servlet-mapping>
  <servlet>
