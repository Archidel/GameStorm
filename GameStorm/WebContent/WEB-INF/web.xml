  </servlet-mapping>
  <servlet>
    <servlet-name>list-game-page</servlet-name>
    <jsp-file>/pages/listgame.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>list-game-page</servlet-name>
    <url-pattern>/listgame</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>game-page</servlet-name>
    <jsp-file>/pages/game.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>game-page</servlet-name>
    <url-pattern>/game</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>welcome-page</servlet-name>
    <jsp-file>/pages/welcome.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>welcome-page</servlet-name>
    <url-pattern>/welcome</url-pattern>
  </servlet-mapping>
  <listener>
    <listener-class>by.htp6.store.controller.listner.DAOListner</listener-class>
  </listener>
</web-app>